AT_SETUP([Include files])
AT_KEYWORDS([include])

AT_CHECK([
AT_DATA([svc1],
[Service
	Host "example.org"
	Backend
		Address
		Port
	End
End
])

AT_DATA([svc2],
[Service
	Host "example.com"
	Backend
		Address
		Port
	End
End
])

AT_DATA([pound.cfi],
[Include "svc1.cfg"
ListenHTTP
End
Include "svc2.cfg"
])

AT_DATA([input],
[GET /echo/foo
Host: example.org
end

200
x-backend-number: 0
end

GET /echo/foo
Host: example.com
end

200
x-backend-number: 1
end
])

perl $HARNESS --preproc svc1 --preproc svc2 --transcript xscript.log input
])

AT_CLEANUP

