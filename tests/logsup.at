AT_SETUP([Log suppression])
AT_KEYWORDS([logsup logsuppress LogSuppress])

m4_pushdef([PT_CHECK_LOG_SUPPRESS],
[m4_pushdef([HARNESS_OPTIONS],[--log-level=-1])
PT_CHECK(
[LogFormat "status" "%s"
LogLevel "status"
ListenHTTP	
	Service "default"
	        LogSuppress $1
                Backend
                        Address
                        Port
                End
	End
End],
[$2])
m4_popdef([HARNESS_OPTIONS])
AT_CHECK([cat pound.log | sed -e 's/^pound: //' \
   -e '/^starting/d' \
   -e '/^shutting down/d' \
   -e '/obtained address/d' \
   -e '/waiting for [[0-9][0-9]]* active threads to terminate/d'],
[0],
[m4_shift2($@)])])

PT_CHECK_LOG_SUPPRESS([all],
[GET /echo/foo
Host: example.com
end

200
end

GET /one
Host: example.com
end

404
end
])

